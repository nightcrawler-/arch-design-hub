<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/ca_background_major"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:scrollingCache="false"></ListView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        fab:fab_colorNormal="@color/holo_yellow_dark"
        fab:fab_colorPressed="@color/gplus_color_2"
        fab:fab_colorRipple="@color/gplus_color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_communication_call_fab" />
</FrameLayout>

