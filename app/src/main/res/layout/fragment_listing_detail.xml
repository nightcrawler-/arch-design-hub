<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gmap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ca_background_major">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollView2"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ca_content_padding">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="6dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ca_content_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="The Alibi"
                            android:id="@+id/textView5"
                            android:textColor="@color/ca_detail_title"
                            android:layout_marginRight="6dp"
                            android:gravity="center_vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:layout_weight="0"
                                android:layout_alignParentRight="true"
                                android:background="@color/ca_background_minor"
                                android:elevation="2dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Ksh. 65,000"
                                    android:id="@+id/textView12"
                                    android:textColor="@color/ca_detail_sub_title"
                                    android:layout_alignParentRight="false"
                                    android:layout_toLeftOf="@+id/textView13"
                                    android:layout_centerVertical="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="/mo"
                                    android:id="@+id/textView13"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignBottom="@+id/textView12"
                                    android:textColor="@color/ca_title_white_faded"
                                    android:layout_gravity="bottom" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView7"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/ic_agents"
                            android:layout_below="@+id/textView6"
                            android:layout_marginRight="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Prima Donna"
                            android:id="@+id/textView7"
                            android:textColor="@color/ca_title_white_faded"
                            android:layout_below="@+id/textView6"
                            android:layout_toRightOf="@+id/imageView7" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView6"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/ic_communication_phone"
                            android:layout_marginRight="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="072568552"
                            android:id="@+id/textView6"
                            android:textColor="@color/ca_title_white_faded"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/imageView6" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/ca_gradient" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    tools:layout="@layout/mapholder"
                    gmap:cameraZoom="13"
                    gmap:mapType="normal"
                    gmap:uiCompass="false"
                    gmap:uiRotateGestures="true"
                    gmap:uiScrollGestures="true"
                    gmap:uiTiltGestures="true"
                    gmap:uiZoomControls="true"
                    gmap:uiZoomGestures="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Some text describing the listing. This should be exhaustive and include all features, extras and other relevant info about the listed property."
                    android:id="@+id/textView9"
                    android:layout_below="@+id/map"
                    android:textColor="@color/ca_title_white"
                    android:layout_margin="@dimen/ca_content_padding"
                    android:lineSpacingExtra="4dp"
                    android:background="@drawable/ca_bg"
                    android:padding="@dimen/ca_content_padding"
                    android:elevation="2dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>